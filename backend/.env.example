# .env.example for backend

# Database Configuration
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Application Secrets
SECRET_KEY=your_super_secret_key_here # IMPORTANT: Change this in production!
GOOGLE_CLIENT_ID=your_google_client_id # For Google Sign-In

# Service URLs
CV_PROCESSOR_URL=http://cv_processor:8001/api/v1/predict/image # Internal Docker network URL
RESET_PASSWORD_URL=http://localhost:3000/reset-password # Frontend URL for password reset
FRONTEND_URL=http://localhost:3000 # Frontend URL for CORS
